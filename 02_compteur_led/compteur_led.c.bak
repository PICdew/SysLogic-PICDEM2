/*Programme : compteur_led.c                                                                             */
/*Description : Programme qui affiche un compteur binaire sur le PORTD et l'incrémente à chaque pression */
/*sur le bouton S2                                                                                       */
/*********************************************************************************************************/

#include <p18f87j11.h>

void main(void)
{

	int etat=0;
	int i,d=0;
	TRISB = 0xFF;		/*PORTB en entré*/
	TRISA = 0xFF;		/*PORTA en entré*/
	TRISD = 0x00;		/*PORTC en sortie*/

	PORTD = 0x00; //initialise le compteur
	while(1)
		{
			while(etat==0)
			{
				etat=0;
				if((PORTB & 0x01) == 0x00) //detecte pression S1
					{
						etat=1;
					}
				if((PORTA & 0x016) == 0x00) //detecte pression S2
					{
						etat=2;
					}
			for(i=0;i<1000;i++);
			}

		if(etat==1)
			{
				PORTD += 1; //icrémente le compteur
				etat=0;
				while((PORTB & 0x01) == 0x00){for(i=0;i<100;i++);}
			}
		if(etat==2)
			{
				PORTD =0; //réinitialise le compteur à 0
				etat=0;
				while((PORTB & 0x01) == 0x00){for(i=0;i<100;i++);}
			}

		}
}

